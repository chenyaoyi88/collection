page {
  background-color: #f5f5f5;
}

.login-box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.me-hd-box .me-avantar {
  width: 100%;
  height: 380rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.me-hd-box .me-avantar .avantar-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.me-avantar .avantar-box .avantar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
}

.me-avantar .avantar-box .avantar-mobile {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.me-main-box .me-list-box {
  margin: 20rpx 0;
}

.me-main-box .logout-btn-box .logout-btn {
  height: 102rpx;
  font-size: 28rpx;
  color: #f33650;
  background-color: #fff;
}

.version {
  margin: 20rpx 0;
  color: #8f8f8f;
  font-size: 28rpx;
  text-align: center;
}
