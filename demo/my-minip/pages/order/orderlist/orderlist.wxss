.info {
  margin-top: -10rpx;
  padding: 0 70rpx 20rpx 100rpx;
  font-size: 24rpx;
}

.info .info-car {
  margin-top: 20rpx;
}

.info .info-car .info-box {
  margin-right: 40rpx;
}

.info .info-car .info-text {
  color: #888;
}

.list-box {
  margin: 20rpx 0;
  background-color: #fff;
}

.list-box .list-tile {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #eee;
}

.list-box .list-tile .list-tile-l {
  color: #888;
}

.list-box .list-content {
  padding: 10rpx 0;
}

.list-box .list-msg {
  border-top: 2rpx solid #eee;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
}

.list-box .list-msg .list-msg-l {
  flex: 1;
  font-size: 30rpx;
  color: #888;
}

.list-box .list-msg .list-msg-r {
  display: flex;
  flex-direction: row;
}

.list-box .list-msg .list-msg-r ._button {
  font-size: 28rpx;
  width: 150rpx;
  height: 60rpx;
  padding: 0;
  margin: 0;
  margin-left: 20rpx;
  border: 2rpx solid #fb0628;
}

.list-box .list-msg .list-msg-r ._button.cancel {
  color: #fb0628;
  background-color: #fff;
}

.item-halfway .mid {
  background-color: #f5a623 !important;
}

.list-nomore {
  padding-bottom: 20rpx;
  text-align: center;
  color: #a0a0a0;
  font-size: 28rpx;
}

.color-notice {
  color: #fb0628;
}

.ghb-btn {
  width: 100%;
  height: 94rpx;
  background-color: #f33650;
  font-size: 36rpx;
  color: #fff;
  border-radius: 0;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

button::after {
  display: none;
}

.ghb-btn:active {
  background-color: #db343f;
}
