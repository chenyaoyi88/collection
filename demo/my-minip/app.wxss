/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.color-notice {
  color: #fb0628;
}

.color-warn {
  color: #ffc631;
}

.color-pass {
  color: #24c551;
}

.color-light {
  color: #888;
}

.no-boder-top {
  border-top: none !important;
}

.ghb-container {
  padding: 20px;
}

.ghb-btn {
  width: 100%;
  height: 94rpx;
  background-color: #f33650;
  font-size: 36rpx;
  color: #fff;
  border-radius: 0;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

button::after {
  display: none;
}

.ghb-btn:active {
  background-color: #db343f;
}

.ghb-btn[disabled] {
  color: #1f0202 !important;
  background-color: #dfdfdf !important;
}

.ghb-input {
  border: 0;
}

/* 颜色 */
.text-light {
  color: #b2b2b2;
}

.mg20 {
  margin: 20rpx;
}

.mg20-tb {
  margin: 20rpx 0;
}

.mg20-lr {
  margin: 0 20rpx;
}
