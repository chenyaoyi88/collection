.item {
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.item.no-padding {
  padding: 0;
}

.item .item-l {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 3;
}

.item-l-none {
  padding-left: 30rpx;
}

.item .item-l .item-icon {
  width: 36rpx;
  height: 36rpx;
}

.item .item-r {
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 30rpx 70rpx 30rpx 0;
  border-top: 1px solid #eee;
  line-height: 1.7;
}

/* item 左侧 icon 发货/收货 点 */

.item .item-l .item-point {
  width: 22rpx;
  height: 22rpx;
  border-radius: 50%;
  position: relative;
  z-index: 5;
}

.item .item-l .item-point.start {
  background-color: #15c145;
}

.item .item-l .item-point.end {
  background-color: #f13744;
}

.item .item-l .item-point.mid {
  width: 5px;
  height: 5px;
  background-color: #ccc;
  margin-left: -1rpx;
}

.item-halfway .item-l .item-point.mid {
  background-color: #f5a623;
}

.item .item-l .item-point-line {
  position: absolute;
  left: 50%;
  width: 2rpx;
  height: 50%;
  z-index: 4;
  background: #eee;
  margin-left: -1rpx;
}

.item .item-l .item-point-line.start {
  bottom: 0;
}

.item .item-l .item-point-line.end {
  top: 0;
}

.item .item-l .item-point-line.mid {
  top: 0;
  height: 100%;
}

.item .item-l .item-point-line.hide {
  display: none;
}

.item .item-r.no-border-top {
  border-top: none;
}

.item-info-t {
  color: #888;
}

.item-info-c {
  color: #333;
}

.item-info-b {
  color: #888;
  font-size: 12px;
}

.item-r .item-r-value {
  color: #4a4a4a;
}

.item-r .item-r-arrow {
  position: absolute;
  right: 10rpx;
  top: 0;
  top: 0px;
  padding: 0 20rpx;
  z-index: 3;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item-r .item-r-arrow .img-item-arrow {
  width: 16rpx;
  height: 26rpx;
}

.item-r .item-r-arrow .img-item-close {
  width: 30rpx;
  height: 30rpx;
}

.item-r .item-input {
  width: 100%;
}

/* 定制样式 */

.item-point-class .item-r {
  min-height: 68rpx;
}

.item-text-light {
  color: #b2b2b2;
}

.order .item-r {
  padding: 10rpx 70rpx 10rpx 0;
}

.order .item-r .item-r-title .item-info-c {
  color: #333 !important;
}