.nodata-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nodata-box .nodata-page-box {
  width: 100%;
  margin-bottom: 30%;
}

.nodata-box .nodata-page-box .nodata-page-img {
  width: 100%;
  height: 140px;
}

.nodata-box .nodata-page-box .nodata-page-tips {
  font-size: 12px;
  text-align: center;
  color: #8f8f8f;
  margin: 8px 0 15px;
}

.ghb-btn {
  background-color: #f33650;
  color: #fff;
  border-radius: 0;
  border: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

button::after {
  display: none;
}

.ghb-btn:active {
  background-color: #db343f;
}

.nodata-box .nodata-page-box .nodata-page-btn {
  width: 70px;
  height: 35px;
  font-size: 14px;
  padding: 0;
}
