:host {
  /* 组件可以指定它所在节点的默认样式 */
}

.tabbar-content {
  padding-bottom: 50px;
}

.tabbar-box {
  width: 100%;
  height: 50px;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  background: #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-top: 1px solid rgb(192, 190, 190);
}

.tabbar-box .tabbar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tabbar-box .tabbar-item .tabbar-item-img {
  width: 28px;
  height: 28px;
}

.tabbar-box .tabbar-item .tabbar-item-title {
  font-size: 10px;
  color: #B2B2B2;
}

.tabbar-box .tabbar-item .tabbar-item-title.active {
  color: #F13744;
}