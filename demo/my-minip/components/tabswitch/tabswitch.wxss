.title-box {
  width: 100%;
  height: 94rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5;
  display: flex;
  justify-content: space-around;
}

.title-box .title-list-item {
  height: 100%;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.title-box .title-list-item.active {
  color: #fb0628;
}

.title-box .title-slider {
  position: absolute;
  bottom: 0;
  transition: ease 0.3s all;
  z-index: 2;
  height: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  left: 0;
  transform: translate3d(0, 0, 0);
}

.title-box .title-slider .slider {
  width: 70%;
  height: 100%;
  background-color: #fb0628;
}

.tab-box {
  width: 100%;
  height: 100%;
  padding-top: 94rpx;
  position: relative;
  z-index: 1;
}

.tab-box .tab {
  display: none;
}

.tab-box .tab.active {
  display: block;
}
